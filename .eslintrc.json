{
    "parserOptions": {
        "ecmaVersion": 9,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "modules": true
        }
    },
    "env": {
        "browser": true,
        "es6": true,
        "jest": true
    },
    "extends": ["eslint:recommended", "plugin:flowtype/recommended"],
    "plugins": ["flowtype"],
    "rules": {
        "consistent-this": ["error", "that"],
        // "curly": ["warn", "all"], // braces for if stmts
        "indent": ["error", 2, {"SwitchCase": 1}],
        "linebreak-style": ["error", "unix"],
        "semi": ["warn", "always"],
        "no-console": 0,
        "no-unused-vars": 0
    },
    "globals": {
        "process": true
    }
}
